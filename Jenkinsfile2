        git branch: 'main', url: 'https://github.com/Thanu2341/Book-My-Show.git'
        sh 'ls -la'
      }
    }

    stage('Install') {
      steps {
        sh '''
          echo "Skipping heavy installs â€” test stage"
          echo "If you want npm, add it later"
        '''
      }
    }

    stage('Trivy') {
      steps {
        sh 'echo "skipping trivy for now" > trivyfs.txt || true'
      }
    }

    stage('Deploy (noop)') {
      steps {
        sh 'echo "deploy step placeholder"'
      }
    }
  }

  post { always { echo "Build finished: ${currentBuild.currentResult}" } }
}
