pipeline {
  agent any

  environment {
    DOCKER_IMAGE  = 'thanu5/docker-demo:2.0'
    AWS_REGION = 'eu-north-1'   // keep, for later EKS step
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Thanu2341/Book-My-Show.git'
        sh 'ls -la'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh '''
          set -e
          cd bookmyshow-app || { echo "Error: directory bookmyshow-app missing"; exit 1; }
          ls -la
          if [ -f package.json ]; then
            rm -rf node_modules package-lock.json || true
            npm install
          else
            echo "Error: package.json not found in bookmyshow-app!"
            exit 1
          fi
        '''
      }
    }

    stage('OWASP FS Scan (skipped)') {
      steps {
        echo 'OWASP stage removed for now'
      }
    }

    stage('Trivy FS Scan') {
      steps {
        sh 'trivy fs . > trivyfs.txt || true'
      }
    }

    stage('Docker Build & Push') {
      steps {
        script {
          // withDockerRegistry requires credentials configured in Jenkins
          withDockerRegistry(credentialsId: 'docker-creds', url: '') {
            sh '''
              echo "Building Docker image..."
              docker build --no-cache -t ${DOCKER_IMAGE} -f bookmyshow-app/Dockerfile bookmyshow-app
              echo "Pushing Docker image to Docker Hub..."
              docker push ${DOCKER_IMAGE}
            '''
          }
        }
      }
    }
  } // end stages

  post {
    always {
      echo "Build finished: ${currentBuild.currentResult}"
    }
  }
}
