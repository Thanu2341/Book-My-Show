pipeline {
  agent any

  tools {
    jdk 'jdk17'
    nodejs 'nodejs25'
  }

  environment {
    // evaluate tool() into a string using Groovy interpolation
    SCANNER_HOME = "${tool 'sonarqube-scanner'}"
    DOCKER_IMAGE  = 'thanu5/docker-demo:2.0'
    EKS_CLUSTER_NAME = 'my-eks-cluster'
    AWS_REGION = 'eu-north-1'
  }

  stages {
    stage('Clean Workspace') {
      steps { cleanWs() }
    }

    stage('Checkout from Git') {
      steps {
        // adjust URL/branch if needed
        git branch: 'main', url: 'https://github.com/Thanu2341/Book-My-Show.git'
        sh 'ls -la' // verify files after checkout
      }
    }

    // (optional) Sonar stage commented out in your screenshots â€” keep or uncomment if you have Sonar set up
    /*
    stage('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('sonarserver') {
          sh """
            ${SCANNER_HOME}/bin/sonar-scanner \
              -Dsonar.projectName=BMS \
              -Dsonar.projectKey=BMS
          """
        }
      }
    }
    */

    stage('Quality Gate') {
      steps {
        script {
          // requires SonarQube plugin and credentials configured
          waitForQualityGate abortPipeline: false, credentialsId: 'sonarid'
        }
      }
    }

    stage('Install Dependencies') {
      steps {
        sh '''
          set -e
          cd bookmyshow-app || { echo "Error: directory bookmyshow-app missing"; exit 1; }
          ls -la
          if [ -f package.json ]; then
            rm -rf node_modules package-lock.json || true
            npm install
          else
            echo "Error: package.json not found in bookmyshow-app!"
            exit 1
          fi
        '''
      }
    }

    stage('OWASP FS Scan') {
      steps {
        // requires OWASP Dependency Check plugin
        dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', 
                        dependencyCheckPublisherPattern: '**/dependency-check-report.xml'
      }
    }

    stage('Trivy FS Scan') {
      steps {
        sh 'trivy fs . > trivyfs.txt || true'
      }
    }

    stage('Docker Build & Push') {
      steps {
        script {
          // withDockerRegistry requires Docker plugin & credentialsId 'docker'
          withDockerRegistry(credentialsId: 'docker', url: '') {
            sh '''
              echo "Building Docker image..."
              docker build --no-cache -t ${DOCKER_IMAGE} -f bookmyshow-app/Dockerfile bookmyshow-app
              echo "Pushing Docker image to Docker Hub..."
              docker push ${DOCKER_IMAGE}
            '''
          }
        }
      }
    }

    stage('Deploy to EKS Cluster') {
      steps {
        script {
          sh '''
            set -e
            echo "Verifying AWS credentials..."
            aws sts get-caller-identity

            echo "Configuring kubectl for EKS cluster..."
            aws eks update-kubeconfig --name ${EKS_CLUSTER_NAME} --region ${AWS_REGION}

            echo "Verifying kubeconfig..."
            kubectl config view

            echo "Deploying application to EKS..."
            kubectl apply -f deployment.yml || true
            kubectl apply -f service.yml  || true

            echo "Verifying deployment..."
            kubectl get pods --no-headers || true
            kubectl get svc --no-headers || true
          '''
        }
      }
    }
  } // end stages

  post {
    always {
      // requires Email Extension plugin configured
      emailext(
        attachLog: true,
        subject: "${currentBuild.currentResult}: ${env.JOB_NAME}",
        body: """
          Project: ${env.JOB_NAME}<br/>
          Build Number: ${env.BUILD_NUMBER}<br/>
          URL: ${env.BUILD_URL}<br/>
        """,
        to: 'thanushree5667@gmail.com',
        attachmentsPattern: 'trivyfs.txt'
      )
    }
  }
}
